@{
}
@model IEnumerable<PH47185.Models.Category>

<header>
<!-- TOP HEADER -->
<div id="top-header">
	
</div>
<!-- /TOP HEADER -->
<!-- MAIN HEADER -->
<div id="header">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<!-- LOGO -->
			<div class="col-md-3">
				<div class="header-logo">
					<a href="#" class="logo">
						<img src="./img/logo.png" alt="">
					</a>
				</div>
			</div>
			<!-- /LOGO -->
			<!-- SEARCH BAR -->
			<div class="col-md-6">
				<div class="header-search">
					<form asp-controller="Products" asp-action="Index">
						<select name="catid" class="input-select">
							<option value="0">All Categories</option>
								@foreach (var item in Model)
								{
									<option value="@item.Id">@item.Name</option>
								}
							</select>
						<input class="input" name="keywords" placeholder="Search here">
						<button class="search-btn">Search</button>
					</form>
				</div>
			</div>
			<!-- /SEARCH BAR -->
			<!-- ACCOUNT -->
			<div class="col-md-3 clearfix">
					
				<div class="header-ctn">
						<div>
							<a href="#">
								<i class="fa fa-heart-o"></i>
								<a asp-controller="Users" asp-action="login">Check Out</a>
							</a>
						</div>
					<!-- Wishlist -->
			
					<!-- /Wishlist -->
					<!-- Cart -->
					<div class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
							<i class="fa fa-shopping-cart"></i>
							<span>Your Cart</span>
						</a>
					</div>
					<!-- /Cart -->
						
					<!-- Menu Toogle -->
					<div class="menu-toggle">
						<a href="#">
							<i class="fa fa-bars"></i>
							<span>Menu</span>
						</a>
					</div>
					<!-- /Menu Toogle -->
				</div>
			</div>
			<!-- /ACCOUNT -->
		</div>
		<!-- row -->
	</div>
	<!-- container -->
</div>
<!-- /MAIN HEADER -->
	</header>